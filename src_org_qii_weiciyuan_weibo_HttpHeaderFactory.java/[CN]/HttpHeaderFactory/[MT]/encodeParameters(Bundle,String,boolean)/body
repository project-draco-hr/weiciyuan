{
  final String splitter=split;
  StringBuffer buf=new StringBuffer();
  for (  String key : postParams.keySet()) {
    if (buf.length() != 0) {
      if (quot) {
        buf.append("\"");
      }
      buf.append(splitter);
    }
    buf.append(encode(key)).append("=");
    if (quot) {
      buf.append("\"");
    }
    buf.append(encode(postParams.getString(key)));
  }
  if (buf.length() != 0) {
    if (quot) {
      buf.append("\"");
    }
  }
  return buf.toString();
}
