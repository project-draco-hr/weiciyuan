{
  super.onResume();
  if (hasGpsInfo())   layout.mapView.onResume();
  sendCompletedReceiver=new BroadcastReceiver(){
    @Override public void onReceive(    Context context,    Intent intent){
      if (isCommentList)       loadNewCommentData();
 else       loadNewRepostData();
    }
  }
;
  LocalBroadcastManager.getInstance(getActivity()).registerReceiver(sendCompletedReceiver,new IntentFilter(AppEventAction.SEND_COMMENT_OR_REPLY_SUCCESSFULLY));
}
