{
  UserBean user=null;
  try {
    ShowUserDao dao=new ShowUserDao(GlobalContext.getInstance().getSpecialToken());
    if (!TextUtils.isEmpty(bean.getId()))     dao.setUid(bean.getId());
 else     dao.setScreen_name(bean.getScreen_name());
    user=dao.getUserInfo();
  }
 catch (  WeiboException e) {
    this.e=e;
    cancel(true);
  }
  if (user != null) {
    bean=user;
    AccountDBTask.updateMyProfile(GlobalContext.getInstance().getAccountBean(),bean);
  }
 else {
    cancel(true);
  }
  return user;
}
