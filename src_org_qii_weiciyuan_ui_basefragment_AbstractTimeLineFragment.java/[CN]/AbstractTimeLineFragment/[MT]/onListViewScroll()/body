{
  if (hasActionMode()) {
    int position=getListView().getCheckedItemPosition();
    if (getListView().getFirstVisiblePosition() > position || getListView().getLastVisiblePosition() < position) {
      clearActionMode();
    }
  }
  if (getListView().getLastVisiblePosition() > getList().getSize() - 3 && getListView().getFirstVisiblePosition() != getListView().getHeaderViewsCount()) {
    loadOldMsg(null);
  }
}
