{
  boolean flag=false;
  if (mActionMode != null) {
    mActionMode.finish();
    mActionMode=null;
    flag=true;
  }
  if (pullToRefreshListView != null && getListView().getCheckedItemCount() > 0) {
    getListView().clearChoices();
    if (getAdapter() != null)     getAdapter().notifyDataSetChanged();
  }
  return flag;
}
