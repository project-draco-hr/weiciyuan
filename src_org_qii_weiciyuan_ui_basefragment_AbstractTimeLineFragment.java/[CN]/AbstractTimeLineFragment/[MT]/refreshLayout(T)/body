{
  if (bean != null && bean.getSize() > 0) {
    progressBar.setVisibility(View.INVISIBLE);
  }
 else   if (bean == null || bean.getSize() == 0) {
    progressBar.setVisibility(View.INVISIBLE);
  }
 else   if (bean.getSize() == bean.getTotal_number()) {
    progressBar.setVisibility(View.INVISIBLE);
  }
}
