{
  if (TextUtils.isEmpty(url))   return;
  new MyAsyncTask<Void,Bitmap,Bitmap>(){
    @Override protected Bitmap doInBackground(    Void... params){
      Bitmap bitmap=null;
      boolean downloaded=TaskCache.waitForPictureDownload(url,null,FileManager.getFilePathFromUrl(url,method),method);
      if (downloaded)       bitmap=ImageTool.getNormalPic(FileManager.getFilePathFromUrl(url,method),width,height);
      return bitmap;
    }
    @Override protected void onPostExecute(    Bitmap bitmap){
      super.onPostExecute(bitmap);
      if (bitmap != null)       imageView.setImageDrawable(new BitmapDrawable(GlobalContext.getInstance().getResources(),bitmap));
    }
  }
.executeOnExecutor(MyAsyncTask.THREAD_POOL_EXECUTOR);
}
