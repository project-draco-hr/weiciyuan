{
  if (isExternalStorageMounted()) {
    File path=GlobalContext.getInstance().getExternalCacheDir();
    if (path != null)     return path.getAbsolutePath();
 else {
      if (!cantReadBecauseOfAndroidBugPermissionProblem) {
        cantReadBecauseOfAndroidBugPermissionProblem=true;
        GlobalContext.getInstance().getActivity().runOnUiThread(new Runnable(){
          @Override public void run(){
            new AlertDialog.Builder(GlobalContext.getInstance().getActivity()).setTitle(R.string.something_error).setMessage(R.string.please_deleted_cache_dir).setPositiveButton(R.string.ok,new DialogInterface.OnClickListener(){
              @Override public void onClick(              DialogInterface dialog,              int which){
              }
            }
).show();
          }
        }
);
      }
    }
  }
 else {
    return "";
  }
  return "";
}
