{
switch (item.getItemId()) {
case R.id.menu_send:
    if (canSend())     new SimpleTask().execute();
  break;
case R.id.menu_enable_comment:
if (enableComment) {
  enableComment=false;
  enableCommentString="??????????????? ???";
}
 else if (!enableComment) {
  enableCommentString="?????????????????????";
  enableComment=true;
}
invalidateOptionsMenu();
break;
}
return true;
}
