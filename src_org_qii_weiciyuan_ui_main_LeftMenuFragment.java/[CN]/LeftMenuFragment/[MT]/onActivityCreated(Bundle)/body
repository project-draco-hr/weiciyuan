{
  super.onActivityCreated(savedInstanceState);
  if (savedInstanceState != null) {
    currentIndex=savedInstanceState.getInt("currentIndex");
  }
switch (currentIndex) {
case 0:
    showHomePage(true);
  break;
case 1:
showMentionPage(true);
break;
case 2:
showCommentPage(true);
break;
}
drawButtonsBackground(currentIndex);
}
