{
  super.onActivityCreated(savedInstanceState);
  if (savedInstanceState != null) {
    currentIndex=savedInstanceState.getInt("currentIndex");
  }
  if (currentIndex == -1) {
    currentIndex=GlobalContext.getInstance().getAccountBean().getNavigationPosition() / 10;
  }
switch (currentIndex) {
case 0:
    showHomePage(true);
  break;
case 1:
showMentionPage(true);
break;
case 2:
showCommentPage(true);
break;
}
drawButtonsBackground(currentIndex);
TimeLinePosition s=MentionsTimeLineDBTask.getPosition(GlobalContext.getInstance().getCurrentAccountId());
HashSet<String> f=s.newMsgIds;
if (f != null) {
setMentionWeiboUnreadCount(f.size());
}
}
