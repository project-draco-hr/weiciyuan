  }
 else {
    if (Utility.isTaskStopped(dbTask)) {
      dbTask=new DBCacheTask();
      dbTask.executeOnExecutor(MyAsyncTask.THREAD_POOL_EXECUTOR);
    }
  }
  super.onActivityCreated(savedInstanceState);
}
