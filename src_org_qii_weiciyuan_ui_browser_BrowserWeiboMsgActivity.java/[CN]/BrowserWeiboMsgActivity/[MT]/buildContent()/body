{
  new Handler(Looper.getMainLooper()).post(new Runnable(){
    @Override public void run(){
      if (getSupportFragmentManager().findFragmentByTag(BrowserWeiboMsgFragment.class.getName()) == null) {
        getSupportFragmentManager().beginTransaction().replace(android.R.id.content,BrowserWeiboMsgFragment.newInstance(msg),BrowserWeiboMsgFragment.class.getName()).commit();
      }
    }
  }
);
  getActionBar().setTitle(getString(R.string.detail));
  invalidateOptionsMenu();
}
