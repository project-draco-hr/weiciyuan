{
  MyViewPager viewPager=(MyViewPager)findViewById(R.id.viewpager);
  TimeLinePagerAdapter adapter=new TimeLinePagerAdapter(getSupportFragmentManager());
  viewPager.setOverScrollMode(View.OVER_SCROLL_NEVER);
  viewPager.setOffscreenPageLimit(1);
  viewPager.setAdapter(adapter);
  viewPager.setOnPageChangeListener(onPageChangeListener);
  gestureDetector=new GestureDetector(BrowserWeiboMsgActivity.this,new SwipeRightToCloseOnGestureListener(BrowserWeiboMsgActivity.this,viewPager));
  viewPager.setGestureDetector(this,gestureDetector);
  getWindow().setBackgroundDrawable(getResources().getDrawable(R.color.transparent));
}
