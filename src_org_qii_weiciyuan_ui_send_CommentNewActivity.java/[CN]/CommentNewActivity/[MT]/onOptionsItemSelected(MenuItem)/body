{
switch (item.getItemId()) {
case R.id.menu_send:
    if (canSend()) {
      new SimpleTask().execute();
    }
  break;
case R.id.menu_enable_repost:
if (enableRepost) {
  enableRepost=false;
  enableRepostString="??????????????? ???";
}
 else if (!enableRepost) {
  enableRepostString="?????????????????????";
  enableRepost=true;
}
invalidateOptionsMenu();
break;
}
return true;
}
