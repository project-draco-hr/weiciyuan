{
  MentionsCommentTimeLineFragment fragment=((MentionsCommentTimeLineFragment)getChildFragmentManager().findFragmentByTag(MentionsCommentTimeLineFragment.class.getName()));
  if (fragment == null) {
    fragment=new MentionsCommentTimeLineFragment(GlobalContext.getInstance().getAccountBean(),GlobalContext.getInstance().getAccountBean().getInfo(),GlobalContext.getInstance().getSpecialToken());
  }
  return fragment;
}
