{
  if (!isCancelled()) {
    int width=Utility.dip2px(40);
    int height=width;
    if (SettingUtility.getEnableBigAvatar()) {
      return ImageTool.getRoundedCornerPic(this.url,width,height,FileLocationMethod.avatar_large);
    }
 else     return ImageTool.getRoundedCornerPic(this.url,width,height,FileLocationMethod.avatar_small);
  }
  return null;
}
