{
  Bitmap bitmap=ori;
  int height=reqHeight < bitmap.getHeight() ? reqHeight : bitmap.getHeight();
  if (height > 0) {
    int needStart=(bitmap.getHeight() - height) / 2;
    Bitmap cropped=Bitmap.createBitmap(bitmap,0,needStart,bitmap.getWidth(),height);
    bitmap.recycle();
    return cropped;
  }
 else {
    return bitmap;
  }
}
