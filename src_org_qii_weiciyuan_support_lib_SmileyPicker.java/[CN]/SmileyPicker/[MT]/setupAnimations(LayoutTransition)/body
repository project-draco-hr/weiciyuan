{
  ObjectAnimator animIn=ObjectAnimator.ofFloat(null,"translationY",SmileyPickerUtility.getScreenHeight(GlobalContext.getInstance().getActivity()),mPickerHeight).setDuration(transition.getDuration(LayoutTransition.APPEARING));
  transition.setAnimator(LayoutTransition.APPEARING,animIn);
  ObjectAnimator animOut=ObjectAnimator.ofFloat(null,"translationY",mPickerHeight,SmileyPickerUtility.getScreenHeight(GlobalContext.getInstance().getActivity())).setDuration(transition.getDuration(LayoutTransition.DISAPPEARING));
  transition.setAnimator(LayoutTransition.DISAPPEARING,animOut);
}
