{
  if (autoRefresh != null) {
    return autoRefresh;
  }
 else {
    AppLogger.e("GlobalContext is empty by system");
    SharedPreferences sharedPref=PreferenceManager.getDefaultSharedPreferences(this);
    autoRefresh=sharedPref.getBoolean(SettingActivity.AUTO_REFRESH,false);
    return autoRefresh;
  }
}
