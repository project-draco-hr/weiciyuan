{
  if (enablePic != null) {
    return enablePic;
  }
 else {
    AppLogger.e("GlobalContext is empty by system");
    SharedPreferences sharedPref=PreferenceManager.getDefaultSharedPreferences(this);
    enablePic=sharedPref.getBoolean(SettingActivity.ENABLE_PIC,true);
    return enablePic;
  }
}
