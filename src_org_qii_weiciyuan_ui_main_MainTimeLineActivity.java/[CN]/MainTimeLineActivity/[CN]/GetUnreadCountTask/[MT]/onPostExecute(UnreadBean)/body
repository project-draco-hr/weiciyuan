{
  super.onPostExecute(unreadBean);
  if (unreadBean != null) {
    int unreadStatus=unreadBean.getStatus();
    int unreadMentionsCount=unreadBean.getMention_cmt() + unreadBean.getMention_status();
    int unreadCommentsCount=unreadBean.getCmt();
    if (unreadStatus > 0)     invlidateTabText(0,unreadStatus);
    if (unreadMentionsCount > 0)     invlidateTabText(1,unreadMentionsCount);
    if (unreadCommentsCount > 0)     invlidateTabText(2,unreadCommentsCount);
  }
}
