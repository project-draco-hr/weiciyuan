{
  ActionBar.Tab tab=getActionBar().getTabAt(index);
  String name=tab.getText().toString();
  String num;
  if (number < 99) {
    num="(" + number + ")";
  }
 else {
    num="(99+)";
  }
  if (!name.endsWith(")")) {
    tab.setText(name + num);
  }
 else {
    int i=name.indexOf("(");
    String newName=name.substring(0,i);
    tab.setText(newName + num);
  }
}
