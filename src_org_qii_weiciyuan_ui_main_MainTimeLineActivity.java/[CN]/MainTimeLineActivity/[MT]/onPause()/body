{
  super.onPause();
  unregisterReceiver(newMsgInterruptBroadcastReceiver);
  if (musicReceiver != null)   unregisterReceiver(musicReceiver);
  newMsgScheduledExecutorService.shutdownNow();
  if (getUnreadCountTask != null)   getUnreadCountTask.cancel(true);
  if (isFinishing())   saveNavigationPositionToDB();
}
