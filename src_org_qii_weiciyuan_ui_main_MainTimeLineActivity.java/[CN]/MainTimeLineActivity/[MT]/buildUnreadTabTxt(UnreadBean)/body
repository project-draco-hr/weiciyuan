{
  int unreadMentionsCount=unreadBean.getMention_status();
  int unreadCommentsCount=unreadBean.getMention_cmt() + unreadBean.getCmt();
  if (unreadMentionsCount > 0 && getMentionFragment() != null)   getMentionFragment().refreshUnread(unreadBean);
  if (unreadCommentsCount > 0 && getCommentFragment() != null)   getCommentFragment().refreshUnread(unreadBean);
}
