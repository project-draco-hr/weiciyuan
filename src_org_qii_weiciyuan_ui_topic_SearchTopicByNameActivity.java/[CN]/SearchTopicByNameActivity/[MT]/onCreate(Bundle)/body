{
  super.onCreate(savedInstanceState);
  Uri data=getIntent().getData();
  String d=data.toString();
  int index=d.lastIndexOf("/");
  String newValue=d.substring(index + 1);
  getActionBar().setTitle(getString(R.string.search_topic) + " #" + newValue+ "#");
  getSupportFragmentManager().beginTransaction().replace(android.R.id.content,new SearchTopicByNameFragment(newValue)).commit();
}
