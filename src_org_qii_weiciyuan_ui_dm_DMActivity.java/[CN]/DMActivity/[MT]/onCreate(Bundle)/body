{
  super.onCreate(savedInstanceState);
  getActionBar().setDisplayShowHomeEnabled(false);
  getActionBar().setDisplayShowTitleEnabled(true);
  getActionBar().setDisplayHomeAsUpEnabled(true);
  UserBean bean=(UserBean)getIntent().getParcelableExtra("user");
  setTitle(bean.getScreen_name());
  if (savedInstanceState == null) {
    getSupportFragmentManager().beginTransaction().replace(android.R.id.content,new DMConversationListFragment(bean),DMConversationListFragment.class.getName()).commit();
  }
}
